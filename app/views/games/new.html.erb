<p><em>Type the longest word with only these letters:</em></p>
<div class="letters d-flex">
  <% @letters.each do |letter| %>
    <div class="letter  m-2 py-2 px-3"><strong><%= letter.capitalize %></strong></div>
  <% end %>
</div>
<label for="form" class="mt-2">Your guess:</label>
<form action="/score" method="post" data-turbo="false">
  <input type="text" name="attempt">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
